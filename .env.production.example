# Production Environment Template for katusome.ssendi.dev

# Core App
APP_NAME="Attendance"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://katusome.ssendi.dev
APP_TIMEZONE=Africa/Kampala

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=attendance
DB_USERNAME=attendance_user
DB_PASSWORD=change-me

# Cache / Session / Queue
# If database is not ready yet, set CACHE_STORE=file temporarily
CACHE_STORE=database
SESSION_DRIVER=database
SESSION_LIFETIME=120
QUEUE_CONNECTION=database

# Filesystem
FILESYSTEM_DISK=public

# Mail (Direct SMTP)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SCHEME=
MAIL_EHLO_DOMAIN=
MAIL_FROM_ADDRESS=noreply@katusome.ssendi.dev
MAIL_FROM_NAME="${APP_NAME}"

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback
ALLOWED_GOOGLE_DOMAIN=mubs.ac.ug

# Redis (optional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Vite
VITE_APP_NAME="${APP_NAME}"